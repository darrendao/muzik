<br />

<h3>Media Player Info</h3>
<div id="media_player" class="infobox">
  <%= render 'media_player' %>
</div>
<br />

<h3>Blacklisted Songs</h3>
<div id="black_list">
  <%= render 'black_list' %>
</div>

<div id="add_black_list">
  <%= render :partial => 'select_songs_to_blacklist' %>
</div>

<br />
