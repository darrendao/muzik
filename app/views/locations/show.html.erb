<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @location.name %>
</p>

<p>
  <b>Address:</b>
  <%= @location.address %>
</p>

<p>
  <b>Phone number:</b>
  <%= @location.phone_number %>
</p>

<p>
  <b>Contact name:</b>
  <%= @location.contact_name %>
</p>

<p>
  <b>Belongs to group:</b>
  <%= link_to @location.group.name, @location.group if @location.group %>
</p>

<p>
  <b>Business hours:</b><br/>
  <% @location.business_hours.each do |business_hour| %>
    <%= Date::ABBR_DAYNAMES[business_hour.wday] %> from <%= business_hour.open_at.strftime("%H:%M") %>
      to <%= business_hour.close_at.strftime("%H:%M") %><br/>
  <% end %>
</p>
<br />
<h3>Media Player Info</h3>
<div id="media_player" class="infobox">
  <%= render 'media_player' %>
</div>

<h3>Blacklisted Songs</h3>
<div id="black_list">
  <%= render 'black_list' %>
</div>

<div id="add_black_list" style="display:none">
  <%= render :partial => 'add_black_list' %>
</div>
<div id="add_black_list_link">
  <%= link_to_function jquery_ui_button_icon("Add Blacklisted Song", "ui-icon-plusthick", "addbls").html_safe , "$('#add_black_list').show(); $('#add_black_list_link').hide()" %>
</div>

<br />
<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
