<script type="text/javascript">
  $(document).ready(function() {
    $("#songstable").dataTable({
                                "bProcessing"     : true,
                                "bJQueryUI"       : true,
                                "bAutoWidth"      : false,
                                "sPaginationType" : "full_numbers",
                                "aoColumn"        : [{"bSortable":false}],
                                "aaSorting"       : [[1, 'asc']],
                                "bServerSide"     : true,
                                "sAjaxSource"     : "/groups/songs.datatables?group_id=<%= @group.id %>"
                               });
  });
</script>

<% if @group.group_song_assignments.nil? %>
  There are no songs assigned to this group.<br/>
<% else %>
<table class="display" id="songstable">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Energy Level</th>
  </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<% end %>
